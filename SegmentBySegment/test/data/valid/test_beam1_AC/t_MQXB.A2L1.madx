
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!! Segment by segment propagation script !!
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

System, "test -e db5 || ln -ns /afs/cern.ch/eng/lhc/optics/V6.503 db5";
System, "test -e ats || ln -ns /afs/cern.ch/eng/lhc/optics/ATS_V6.503 ats";
system, "test -e runII || ln -ns /afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/MODEL/LHCB_II/model/StrengthFiles/Nominal runII";

option, -echo;

call, file="/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/segmentBySegment.macros.madx";

lhc_run = 1;
if(lhc_run == 1){
    exec, load_seq_lhc("/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_AC//modifiers.madx");
}elseif(lhc_run == 2){
    exec, load_seq_lhc_ii("/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_AC//modifiers.madx", "/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/MODEL/LHCB_II/model/base_sequence.madx");
}

option, echo;

!!! Load measurement values
call, file="/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_AC//measurement_MQXB.A2L1.madx";

!!! Segment by segment main
exec, sbs_main(LHCB1, BPMSY.4L1.B1, BPMS.2L1.B1, "/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_AC//StartPoint.twiss", biniLHCB1, bendLHCB1);

!!! Extract front and back propagation sequences
exec, extract_seq(LHCB1, BPMSY.4L1.B1, BPMS.2L1.B1);

!!! Propagation front and back
exec, twiss_fr_bk(LHCB1, "/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_AC//twiss_MQXB.A2L1.dat", "/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_AC//twiss_MQXB.A2L1_back.dat", biniLHCB1, bendLHCB1);

!!! Loading corrections
call,  file="/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_AC//corrections_MQXB.A2L1.madx";

!!! Corrected propagation front and back
exec, twiss_fr_bk(LHCB1, "/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_AC//twiss_MQXB.A2L1_cor.dat", "/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_AC//twiss_MQXB.A2L1_cor_back.dat", biniLHCB1, bendLHCB1);

return;
