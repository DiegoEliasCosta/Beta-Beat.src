
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!! Segment by segment propagation script !!
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

System, "test -e db5 || ln -ns /afs/cern.ch/eng/lhc/optics/V6.503 db5";
System, "test -e ats || ln -ns /afs/cern.ch/eng/lhc/optics/ATS_V6.503 ats";
system, "test -e runII || ln -ns /afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/MODEL/LHCB_II/model/StrengthFiles/Nominal runII";

option, -echo;

call, file="/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/segmentBySegment.macros.madx";

lhc_run = 1;
if(lhc_run == 1){
    exec, load_seq_lhc("/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_disp//modifiers.madx");
}elseif(lhc_run == 2){
    exec, load_seq_lhc_ii("/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_disp//modifiers.madx", "/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/MODEL/LHCB_II/model/base_sequence.madx");
}

option, echo;

!!! Load measurement values
call, file="/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_disp//measurement_IP5.madx";

!!! Segment by segment main
exec, sbs_main(LHCB1, BPM.12L5.B1, BPM.12R5.B1, "/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_disp//StartPoint.twiss", biniLHCB1, bendLHCB1);

!!! Extract front and back propagation sequences
exec, extract_seq(LHCB1, BPM.12L5.B1, BPM.12R5.B1);

!!! Propagation front and back
exec, twiss_fr_bk(LHCB1, "/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_disp//twiss_IP5.dat", "/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_disp//twiss_IP5_back.dat", biniLHCB1, bendLHCB1);

!!! Loading corrections
call,  file="/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_disp//corrections_IP5.madx";

!!! Corrected propagation front and back
exec, twiss_fr_bk(LHCB1, "/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_disp//twiss_IP5_cor.dat", "/afs/cern.ch/work/j/jcoellod/public/Beta-Beat.src/SegmentBySegment/test/data/to_check/test_beam1_disp//twiss_IP5_cor_back.dat", biniLHCB1, bendLHCB1);

return;
